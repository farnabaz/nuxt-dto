{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@types/lodash.get",
      "@types/jest",
      "@nuxt/types",
    ]
  },
  "include": [
    "./lib",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
